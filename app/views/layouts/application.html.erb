<!DOCTYPE html>
<html>
<head>
  <title>DiyOverflow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
	<% if !current_user %>
	  <%= link_to image_tag("sign_in_with_twitter.png", :class => 'twitter-button'), "/auth/twitter", id: "sign_in" =%>
	<% else %>
	  <%= link_to "Logout", signout_path, method: :post %>
	<% end %>
    <%= form_tag("/search", method: "get") do %>
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
    <% end %>
</div>

<%= yield %>

</body>
</html>
